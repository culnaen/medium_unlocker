{
  "manifest_version": 3,
  "name": "Medium Auto → Freedium",
  "version": "2.0",
  "description": "open Medium through Freedium",
  "permissions": ["tabs"],
  "host_permissions": [
    "*://medium.com/*",
    "*://*.medium.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://medium.com/*",
        "*://*.medium.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Medium → Freedium"
  }
}
